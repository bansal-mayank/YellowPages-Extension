{
    "name": "Yellow Pages",
    "manifest_version": 2,
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery.js", "content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Yellow Pages"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }

}